<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    style="@style/dialog_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:orientation="vertical"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/layout_settings_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="roboRIO IP"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/layout_settings_roborio_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"/>

        <Button
            android:id="@+id/layout_settings_robot_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="Choose"/>

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orientation"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_span="2">

            <RadioButton
                android:id="@+id/layout_settings_orientation_landscape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Landscape"/>

            <RadioButton
                android:id="@+id/layout_settings_orientation_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Portrait"/>
        </RadioGroup>
    </TableRow>
</TableLayout>
